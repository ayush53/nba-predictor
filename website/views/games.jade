extends layout

block content

  include inc/nav
  .container-fluid
    .row
      include inc/sidebar
      .col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
        h1.page-header Recent Games
        .table-responsive
          table.table.table-striped
            thead
              tr
                th Date
                th Home Team
                th Away Team
            tbody
              each game in games
                tr
                  td= game[0].formattedGameDate
                  td= game[0].team
                  td= game[1].team
  include inc/foot